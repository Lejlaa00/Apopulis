<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Simulation settings"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvRegionLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Region"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Spinner
            android:id="@+id/spRegion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvRegionLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvPeriodLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Every N minutes"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/spRegion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/etPeriodMinutes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="5"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@id/tvPeriodLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvCommentsLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Comments per period"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/etPeriodMinutes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/etCommentsPerPeriod"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="5"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@id/tvCommentsLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvSpacingLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Spacing inside burst (ms)"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/etCommentsPerPeriod"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/etBurstSpacing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="800"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@id/tvSpacingLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <FrameLayout
            android:id="@+id/region_map_container"
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/etBurstSpacing"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnStart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Start"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_filled_purple"
            app:layout_constraintTop_toBottomOf="@id/region_map_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="4dp"/>

        <Button
            android:id="@+id/btnStop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/btn_filled_purple"
            android:text="Stop"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnStart"
            android:layout_marginHorizontal="4dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
